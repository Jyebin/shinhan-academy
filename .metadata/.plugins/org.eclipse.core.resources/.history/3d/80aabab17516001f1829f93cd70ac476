		MemberVO vo = new MemberVO();
		vo.setNo(1);
		vo.setName("홍길동");
		vo.setId("hong");
		List<MemberVO> list = new ArrayList<>();
		list.add(vo);
		list.add(vo);
		list.add(vo);
		list.add(vo);
		list.add(vo);
		Map<String,Object> map = new HashMap<>();
		map.put("items", list);
		map.put("display", 5);
		map.put("total", 5);
		return list;
	}
	
	@GetMapping("/api/index3")
	public MemberVO index3(MemberVO vo) {
		return vo;
	}
	
}
