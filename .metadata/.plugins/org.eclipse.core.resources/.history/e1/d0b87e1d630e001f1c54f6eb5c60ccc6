<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="person" class="chapter01.Person">
		<property name="name"> <!-- name은 private라서 값을 대입할 수 없음 -> setName 메소드를 무조건 호출할 수 밖에 없음 -->
			<value>홍길동</value> <!-- 홍길동이라는 이름으로 set 된 상태로 bean 컨테이너에 저장되는 것 -->
		</property>

		<property name="age">
			<value>30</value>
		</property>

	</bean>
	<bean id="person2" class="chapter01.Person">
		<constructor-arg>
			<value>이순신</value>
		</constructor-arg>
		<constructor-arg value="40" />

	</bean>
</beans>
