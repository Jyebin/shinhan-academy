package chapter08;

import java.util.List;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class StudentMapper {
	@Autowired
	private SqlSessionTemplate sst; // spring이 객체 주입.
	// 객체 주입 시점 : tomcat이 start 될 때

	// 전체학생목록 조회 리턴
	public List<StudentVO> all(StudentVO vo) {
		return sst.selectList("student.all", vo); // namespace와 id를 적으면 xml에서 일치하는 것을 찾아서 알아서 실행시킴
	}
	
	public List<Map> all(Map<String, Object> vo) {
		return sst.selectList("student.all2", vo); // namespace와 id를 적으면 xml에서 일치하는 것을 찾아서 알아서 실행시킴
	}

	public StudentVO view(int studno) {
		return sst.selectOne("student.view", studno);
	}
}
