<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.project.reply.ReplyMapper">
	<insert id="insert" parameterType="kr.co.project.reply.ReplyVO">
		INSERT INTO reply(
		title, content, regdate, readcnt,
		gno, ono, nested,
		writer
		) values (
		#{title}, #{content},NOW(),0,
		#{gno}, #{ono},
		#{nested}, #{writer}
		)
		<selectKey order="AFTER" keyProperty="no" resultType="int">
			select
			last_insert_id()
		</selectKey>
	</insert>

	<!-- gno 수정 -->
	<update id="updateGno" parameterType="int">
		UPDATE reply SET gno=#{no}
		WHERE no=#{no}
	</update>

	<!-- ono 수정(같은 그룹이면서 부모의 ono보다 큰 ono를 +1) -->
	<update id="updateOno"
		parameterType="kr.co.project.reply.ReplyVO">
		UPDATE reply SET ono=ono+1 WHERE gno=#{gno} and
		ono>#{ono}
	</update>

	<update id="update" parameterType="kr.co.project.reply.ReplyVO">
		UPDATE reply SET
		title=#{title}, content=#{content}
		WHERE no=#{no}
	</update>
	<delete id="delete" parameterType="int">
		DELETE FROM reply WHERE
		no=#{no}
	</delete>

	<sql id="searchSql">
		<where>
			<if test="searchWord != null and searchWord != ''">
				<if test="searchType == 'all'">
					title LIKE '%${searchWord}%' OR content LIKE
					'%{searchWord}%'
				</if>
				<if test="searchType != 'all'">
					${searchType} LIKE '%${searchWord}%'
				</if>
			</if>
		</where>
	</sql>

	<!-- 목록 -->
	<select id="list" parameterType="kr.co.project.reply.ReplyVO"
		resultType="kr.co.project.reply.ReplyVO">
		select *e,(select name from member where no=reply.writer) writer_name
		from reply
		<include refid="searchSql"/>
		ORDER BY gno DESC, ono ASC
		LIMIT #{startIdx}, 10
	</select>

	<!-- 카운트 -->
	<select id="count" parameterType="kr.co.project.reply.ReplyVO"
		resultType="int">
		SELECT COUNT(*) FROM reply;
	</select>

	<!-- 상세 -->
	<select id="detail" parameterType="kr.co.project.reply.ReplyVO">
		SELECT * FROM reply WHERE
		no=#{no}
	</select>

	<!-- 조회수 증가 -->
	<update id="increaseReadcnt" parameterType="int">
		UPDATE reply SET
		readcnt=readcnt+1 WHERE no=#{no}
	</update>

</mapper>